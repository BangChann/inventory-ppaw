<%- include('../partials/head',{page: "shelf-new"}) %>

<h2 class="title is-2">New</h2>

<form action="/admin/shelf/save" method="post" style="max-width: 500px;" enctype="multipart/form-data">
    <div class="field">
        <label class="label">Name</label>
        <div class="control">
            <input class="input" name="name" type="text" placeholder="Product Name">
        </div>
    </div>

    <div class="field">
        <label class="label">Location</label>
        <div class="control">
            <textarea class="input" name="loc" placeholder="Description"></textarea>
        </div>
    </div>

    <div class="field">
        <label class="label">Description</label>
        <div class="control">
            <textarea class="input" name="descr" placeholder="Description"></textarea>
        </div>
    </div>
    
    <br>
    <div class="field">
            <div class="control">
              <button class="button is-link">Submit</button>
            </div>
    </div>
</form>
<script>
var file = document.getElementById("file");
file.onchange = function(){
    if(file.files.length > 0)
    {

      document.getElementById('filename').innerHTML = file.files[0].name;
      console.log(file.files[0])

    }
}
</script>
