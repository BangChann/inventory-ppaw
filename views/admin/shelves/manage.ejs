<%- include('../partials/head',{page: "shelves-manage"}) %>
<div class="columns" style="margin-top: 24px;">
  <div class="column">
    <h2 class="title is-2">Shelves</h2>
  </div>
  <div class="column" style="margin-right: 10px;">
    <div class="buttons is-right">
      <a href="/admin/shelves/new" class="button is-link">Add New</a>
    </div>
  </div>
</div>
<div id="app">
  <table class="table is-striped is-fullwidth" >
    <thead>
      <tr>
        <th class="has-text-centered">id</th>
        <th class="has-text-centered">Name</th>
        <th class="has-text-centered">Location</th>
        <th class="has-text-centered">Description</th>
        <th class="has-text-centered">Action</th>
      </tr>
    </thead>
    <tbody>
  <% shelves.forEach((item,index)=> { %>

      <tr>
          <td class="has-text-centered"><%-item.id %></td>
          <td class="has-text-centered"><%-item.shelf_name %></td>
          <td class="has-text-centered"><%-item.location %></td>
          <td class="has-text-centered"><%-item.description %></td>
          <td class="has-text-centered">
            <a href="/admin/shelves/edit/<%-item.id %>" class="button is-link">Edit</a>
            <a href="/admin/shelves/delete/<%-item.id %>" class="button is-danger">Delete</a>
          </td>
      </tr>
  <% }) %>
    </tbody>
  </table>
</div>
<script src="/js/vue.js"></script>
<script src="/js/sweetalert2.all.min.js"></script>
<script>
</script>
